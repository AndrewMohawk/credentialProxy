# Server Configuration
PORT=4242
NODE_ENV=development

# Auth Configuration
JWT_SECRET=replace_with_a_secure_random_string_in_production

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/credential_proxy?schema=public

# Redis Configuration
REDIS_URL=redis://localhost:6380
REDIS_HOST=localhost
REDIS_PORT=6380

# Encryption Configuration
ENCRYPTION_KEY=replace_with_a_secure_random_string_in_production

# WebAuthn/Passkey Configuration
PASSKEY_RP_ID=credentialproxy.andrewmohawk.xyz
PASSKEY_RP_NAME=Credential Proxy
PASSKEY_ORIGIN=https://credentialproxy.andrewmohawk.xyz

# Prometheus Configuration
PROMETHEUS_PORT=9090

# Grafana Configuration
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Authentication
JWT_EXPIRATION=24h
REQUEST_TIMEOUT=300000  # 5 minutes in milliseconds
PENDING_REQUEST_EXPIRY=86400000  # 24 hours in milliseconds 